<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="eui-breadcrumbs">
        <ol class="eui-breadcrumbs__list">
          <li class="eui-breadcrumbs__item">
            <%= link_to 'Manage CMR', manage_cmr_path %>
          </li>
          <li class="eui-breadcrumbs__item">
            <%= link_to 'Order Policies', order_policies_path %>
          </li>
          <li class="eui-breadcrumbs__item">New</li>
        </ol>
      </div>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <div class="row row-content">
    <section>
      <h2>New <%= current_user.provider_id %> Order Policies</h2>

      <%= form_tag(order_policies_path, method: :post, id: "order-policies-form") do %>
        <%= render partial: "form" %>
      <% end %>
    </section>
  </div>
</main>