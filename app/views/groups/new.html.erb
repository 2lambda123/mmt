<div class="row row-content">
  <section>
    <h2 class="new-group-title">
      New Group for <span class="provider-context"><%= current_user.provider_id %></span>
      <% if @user_is_system_group_admin %>
        <span class="eui-badge--sm is-hidden sys-badge">SYS</span>
      <% end %>
    </h2>

    <%= form_tag(groups_path, method: :post, class: 'group-form') do %>
      <%= render 'form' %>
    <% end %>
  </section>
</div>