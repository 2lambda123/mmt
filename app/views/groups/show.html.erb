<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="breadcrumb">
        <ol>
          <li><%= link_to 'Manage CMR', manage_cmr_path %></li>
          <li><%= link_to 'Groups', groups_path %></li>
          <li><%= @group['name'] %></li>
        </ol>
      </div>
      <div class="row space-bot">
        <h2><%= @group['name'] %></h2>
        <p><%= @group['description'] %></p>
      </div>
      <div class="row">
        <p class="subnav">Permissions</p>
        <p class="subnav current">
          <%= link_to 'Groups', groups_path %>
        </p>
      </div>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <div class="row row-content">
    <section>
      <div class="flex-center">
        <div class="row">
          <%= link_to 'Edit Group', edit_group_path(group: true) %> |
          <%= link_to 'Delete Group', '#delete-group-modal', class: 'display-modal' %>
          <div id='delete-group-modal' class="modal-content">
            <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-invisible">Close</span></a>
            <p>Are you sure you want to delete this group?</p>
            <p>
              <a href="javascript:void(0)" class="btn btn-default modal-close">No</a>
              <%= link_to 'Yes', group_path(@group), method: :delete, class: 'btn btn-blue spinner' %>
            </p>
          </div>
        </div>
      </div>
      <hr>
      <p>
        <b class="disabled">Associated Permissions</b>
        <br>
        -
      </p>
      <hr>
      <p>
        <b>Group Members</b>
      </p>
      <div class="row">
        <a href="#" class="btn btn-default disabled">Remove Selected</a>
        <%= link_to '+ Add Members', edit_group_path(add_members: true), class: 'btn btn-default' %>
      </div>
      <table class="space-top align-c" id="groups-table">
        <thead>
          <tr>
            <th class="align-c"><input type="checkbox" disabled><span class="is-invisible">Column to select members</span></th>
            <th>Member Name</th>
            <th>Email</th>
            <!-- <th>Last Activity</th> -->
          </tr>
        </thead>
        <tbody>
          <% @sorted_members.each do |member| %>
            <tr>
              <td><input type="checkbox" disabled></td>
              <td class="align-l"><%= member[0] %></td>
              <td class="align-l"><%= member[1] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </div>
</main>
