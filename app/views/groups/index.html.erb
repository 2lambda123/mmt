<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="eui-breadcrumbs">
        <ol class="eui-breadcrumbs__list">
          <li class="eui-breadcrumbs__item"><%= link_to 'Manage CMR', manage_cmr_path %></li>
          <li class="eui-breadcrumbs__item current">Groups</li>
        </ol>
      </div>

      <h2>Groups</h2>
      <p class="subnav"><%= link_to 'Permissions', permissions_path %></p>
      <p class="subnav current">Groups</p>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <div class="row row-content">
    <section>
      <%= link_to 'New Group', new_group_path, class: 'eui-btn--blue space-bot space-top-5' %>

      <%= form_tag(groups_path, method: :get, class: 'group-form') do %>
        <div class="group-filters">
          <span class="label">Refine group listing</span>
          <!-- Filter by provider -->
          <%= label_tag 'filters_provider_', 'Provider', class: 'is-invisible' %>
          <%= select_tag 'filters[provider][]', options_for_select(@provider_ids, @filters['provider']), style: 'width: 40%', class: 'select2-select provider-filter', multiple: 'multiple' %>

          <!-- Filter by member -->
          <%= label_tag 'filters_member_', 'Member', class: 'is-invisible' %>
          <%= select_tag 'filters[member][]', options_for_user_select(@users, @filters['member']), style: 'width: 40%', class: 'select2-select member-filter', multiple: 'multiple' %>

          <!-- Apply all filters button -->
          <%= submit_tag 'Apply Filter', class: 'eui-btn--blue' %>
        </div>
      <% end %>

      <p><%= page_entries_info @groups, entry_name: 'group' %></p>

      <table class="groups-table">
        <thead>
          <tr>
            <th>Group Name</th>
            <th>Description</th>
            <th>Provider</th>
            <th>Members</th>
          </tr>
        </thead>

        <tbody>
          <% if @groups.blank? %>
            <tr>
              <td colspan="4">No groups found at this time.</td>
            </tr>
          <% else %>
            <% @groups.each do |group| %>
              <tr>
                <td>
                  <%= link_to group['name'], group_path(group['concept_id']) %>
                  <% if check_if_system_group?(group, group['concept_id']) %>
                    <span class="eui-badge--sm">SYS</span>
                  <% end %>
                </td>
                <!-- TODO need to put a limit or char cutoff for description? -->
                <td><%= group['description'] %></td>
                <td><%= group_provider(group) %></td>
                <td><%= group['member_count'] %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <%= paginate @groups %>

    </section>
  </div>
</main>
