<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="eui-breadcrumbs">
        <ol class="eui-breadcrumbs__list">
          <li class="eui-breadcrumbs__item">
            <%= link_to 'Manage CMR', manage_cmr_path %>
          </li>
          <li class="eui-breadcrumbs__item">
            <%= link_to 'All Provider Holdings', provider_holdings_path %>
          </li>
          <li class="eui-breadcrumbs__item">
            <%= @provider_id %> Holdings
          </li>
        </ol>
      </div>
    </div>
  </header>
  <div class="row row-content">
    <div class="row">
      <section>
        <table id='collections'>
          <thead>
          <tr>
            <th>Collection</th>
            <th>Granules</th>
          </tr>
          </thead>
          <tbody>
          <% if @collections.blank? %>
            <tr>
              <td colspan="2">
                No collections found
              </td>
            </tr>
          <% else %>
            <% @collections.each do |row| %>
              <tr class='<%= cycle("alt", "") %>'>
                <td>
                  <%= row[:title] %>
                </td>
                <td class="align-r">
                  <%= number_with_delimiter(row[:granules]) %>
                </td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>

      </section>
    </div>
  </div>
</main>
