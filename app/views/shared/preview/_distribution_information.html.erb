<div class="preview-collection accordion">
  <div class="accordion-header">
    <h4>Distribution Information <% if @draft.present? %><%= link_to '<i class="fa fa-edit"></i> <span class="is-hidden">Edit Related URLs</span>'.html_safe, draft_edit_form_path(@draft, 'distribution_information'), {class: 'hash-link'} %><% end %></h4>
    <a href="#" class="float-r">
      <i class="fa fa-angle-down toggle"></i>
      <span class="is-hidden">Toggle Distribution Information Fields</span>
    </a>
  </div>
  <div class="accordion-body">
    <% if (metadata['RelatedUrls'].blank? && metadata['Distributions'].blank?) %>
      <p class="empty-section">There is no data for this section.</p>
    <% end %>
    <% if metadata['RelatedUrls'] %>
      <h5>Related URLs</h5>
    <% end %>
    <% if metadata['Distributions'] %>
      <h5>Distributions</h5>
    <% end %>
  </div>
</div>
