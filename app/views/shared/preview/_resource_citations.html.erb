<div class="preview-collection accordion">
  <div class="accordion-header">
    <h4>Resource Citations Fields:</h4>
    <a href="#" class="float-r">
      <i class="fa fa-angle-down toggle"></i>
      <span class="is-invisible">Toggle Resource Citations Fields</span>
    </a>
  </div>
  <div class="accordion-body">
    <ul class="resource-citations-preview">
      <h5>Collection Citations <% if @draft.present? %><%= link_to '<i class="fa fa-edit"></i> <span class="is-invisible">Edit Collection Citations</span>'.html_safe, draft_edit_form_path(@draft, 'resource_citations', {anchor: 'collection-citations'}), {class: 'hash-link'} %><% end %></h5>

      <% if metadata['PublicationReferences'] %>
        <h5>
          Publication References
          <% if @draft.present? %>
            <%= link_to '<i class="fa fa-edit"></i> <span class="is-hidden">Edit Resource Citations</span>'.html_safe, draft_edit_form_path(@draft, 'data_identification', { anchor: 'collection-citation' }), { class: 'hash-link' } %>
          <% end %>
        </h5>

        <ul class="cards">
          <% metadata['CollectionCitations'].each do |citation| %>
            <li class="card">
              <div class="card-header">
                <% if citation['Title'].blank? %>
                  <h5 class="card-header-title">Collection citation title not provided</h5>
                  <% else %>
                  <h5 class="card-header-title"><%= citation['Title'] %></h5>
                <% end %>
                <% if citation['Version'] %>
                  <span class="card-header-badge"><%= citation['Version'] %></span>
                <% end %>
              </div>
              <div class="card-body fluid-height active">
                <div class="card-body-details-full">
                  <% if citation['Creator'] %>
                    <p><b>Created by: </b><%= citation['Creator'] %></p>
                  <% end %>
                  <% if citation['Editor'] %>
                    <p><b>Editor: </b><%= citation['Editor'] %></p>
                  <% end %>
                  <% if citation['Publisher'] %>
                    <p><b>Published by: </b><%= citation['Publisher'] %></p>
                  <% end %>
                  <% if citation['ReleaseDate'] %>
                    <p><b>Released: </b><%= citation['ReleaseDate'].split('T')[0] %></p>
                  <% end %>
                </div>
              </div>
              <% if citation['OtherCitationDetails'] %>
                <div class="card-body">
                  <div class="card-body-details-full">
                    <p><%= citation['OtherCitationDetails'] %>
                  </div>
                </div>
              <% end %>
              <% if citation['RelatedUrl'] %>
                <div class="card-body">
                  <div class="card-body-details-full">
                    <ul>
                      <% citation['RelatedUrl']['URLs'].each do |url| %>
                        <li><i class="fa fa-external-link"></i>
                          <a href="<%= url %>"><%= url %></a>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              <% end %>
              <div class="card-navigation">
                <ul>
                  <li class="card-navigation-control"><a href="" class="card-navigation-control-back"><i class="fa fa-chevron-left"></i></a></li>
                  <li class="card-navigation-pagination">
                    <i class="fa fa-circle"></i>
                    <% if citation['RelatedUrl']%>
                      <i class="fa fa-circle-o"></i>
                    <% end %>
                  </li>
                  <li class="card-navigation-control"><a href="" class="card-navigation-control-forward"><i class="fa fa-chevron-right"></i></a></li>
                </ul>
              </div>
            </li>
          <% end %>
        </ul>
      <% end %>
    </ul>
  </div>
</div>
