<div class="preview-collection accordion is-closed">
  <div class="accordion-header">
    <h4>Acquisition Information Fields:</h4>
    <a href="#" class="float-r">
      <i class="fa fa-angle-down toggle"></i>
      <span class="is-hidden">Toggle Acquisition Information Fields</span>
    </a>
  </div>
  <div class="accordion-body">
    <ul class="acquisition-information-preview">

      <h4>Platforms <% if @draft.present? %><%= link_to '<i class="fa fa-edit"></i> <span class="is-hidden">Edit Platforms"'.html_safe, draft_edit_form_path(@draft, 'acquisition_information', {anchor: 'platforms'}), {class: 'hash-link'} %><% end %></h4>
      <%= render partial: 'shared/preview/preview_type', locals: {
          data: metadata['Platforms'],
          name: 'Platforms',
          type: TypesHelper::PlatformsType
      } %>

      <h4>Projects <% if @draft.present? %><%= link_to '<i class="fa fa-edit"></i> <span class="is-hidden">Edit Projects"'.html_safe, draft_edit_form_path(@draft, 'acquisition_information', {anchor: 'projects'}), {class: 'hash-link'} %><% end %></h4>
      <%= render partial: 'shared/preview/preview_type', locals: {
          data: metadata['Projects'],
          name: 'Projects',
          type: TypesHelper::ProjectsType
      } %>

    </ul>
  </div>
</div>
