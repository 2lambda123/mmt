<div class="preview-collection accordion is-closed">
  <div class="accordion-header">
    <i class="fa fa-angle-down toggle"></i>
    <h4>Metadata Information Fields:</h4>
  </div>
  <div class="accordion-body">
    <ul class="metadata-information-preview">
      <h4>Metadata Language <% if @draft.present? %><%= link_to '<i class="fa fa-edit"></i> <span class="hidden">Edit Metadata Language</span>'.html_safe, draft_edit_form_path(@draft, 'metadata_information', {anchor: 'metadata-language'}), {class: 'hash-link'} %><% end %></h4>
      <%= render partial: 'shared/preview/fields/display_field_line', locals: { key_name: 'MetadataLanguage', hash_for_key: metadata } %>

      <h4>Metadata Dates <% if @draft.present? %><%= link_to '<i class="fa fa-edit"></i> <span class="hidden">Edit Metadata Dates</span>'.html_safe, draft_edit_form_path(@draft, 'metadata_information', {anchor: 'metadata-dates'}), {class: 'hash-link'} %><% end %></h4>
      <%= render partial: 'shared/preview/preview_type', locals: {
          data: metadata['MetadataDates'],
          name: 'MetadataDates',
          type: TypesHelper::DateType
      } %>

    </ul>
  </div>
</div>
