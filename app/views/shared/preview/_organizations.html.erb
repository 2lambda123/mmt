<div class="preview-collection accordion">
  <div class="accordion-header">
    <h4>Organizations</h4>
    <a href="#" class="float-r">
      <i class="fa fa-angle-down toggle"></i>
      <span class="is-invisible">Toggle Organizations Fields</span>
    </a>
  </div>
  <div class="accordion-body">
    <% if metadata['Organizations'].blank? %>
      <p class="empty-section">There are no listed organizations for this collection.</p>
    <% else %>
      <ul class="cards">
      <% metadata['Organizations'].each do |org| %>
        <li class="card">
          <div class="card-header">
            <h5 class="card-header-title"><%= org['Party']['OrganizationName']['ShortName'] %></h5>
            <span class="card-header-badge"><%= org['Role'] %></span>
          </div>
          <div class="card-body active">
            <div class="card-body-details">
              <h6><%= org['Party']['OrganizationName']['LongName'] %></h6>
              <% if org['Party']['Addresses'].blank? %>
                <p class="empty-section">This organization does not have any addresses listed.</p>
              <% else %>
              <p>
                <%= org['Party']['Addresses'].first['StreetAddresses'][0] %><br />
                <%= org['Party']['Addresses'].first['StreetAddresses'][1] %><br />
                <%= org['Party']['Addresses'].first['StreetAddresses'][2] %><br />
                <%= org['Party']['Addresses'].first['City'] %>, <%= org['Party']['Addresses'].first['StateProvince'] %> <%= org['Party']['Addresses'].first['PostalCode'] %>
              </p>
              <% end %>
            </div>
            <div class="card-body-aside">
              <h6><%= org['Party']['ServiceHours'] %></h6>
              <% if org['Party']['Contacts'].blank? %>
                <p class="empty-section">This organization does not have any contacts listed.</p>
              <% else %>
              <ul>
                <% org['Party']['Contacts'].each do |contact| %>
                  <li>
                    <% if contact["Type"] == 'Phone' %><i class="fa fa-phone-square"></i> <%= contact['Value'] %><% end %>
                    <% if contact["Type"] == 'Email' %><i class="fa fa-envelope"></i> <a href="mailto:<%= contact['Value'] %>" title="<%= contact['Value'] %>">Email</a><% end %>
                    <% if contact["Type"] == 'Twitter' %><i class="fa fa-twitter-square"></i> <a href="<%= contact['Value'] %>">Twitter</a><% end %>
                    <% if contact["Type"] == 'Facebook' %><i class="fa fa-facebook-square"></i> <a href="<%= contact['Value'] %>">Facebook</a><% end %>
                  </li>
                <% end %>
              </ul>
              <% end %>
            </div>
          </div>
          <% if org['Party']['Addresses'] && org['Party']['Addresses'].length > 1 %>
            <% org['Party']['Addresses'].drop(1).each do |address| %>
              <div class="card-body">
                <div class="card-body-details-full">
                  <h6>Additional Address</h6>
                  <p>
                    <%= address['StreetAddresses'][0] %><br />
                    <%= address['StreetAddresses'][1] %><br />
                    <%= address['StreetAddresses'][2] %><br />
                    <%= address['City'] %>, <%= address['StateProvince'] %> <%= address['PostalCode'] %>
                  </p>
                </div>
              </div>
            <% end %>
          <% end %>
          <% if org['Party']['ContactInstructions'] %>
            <div class="card-body">
              <div class="card-body-details-full">
                <h6>Contact Details</h6>
                <p><%= org['Party']['ContactInstructions'] %></p>
              </div>
            </div>
          <% end %>
          <% if org['Party']['RelatedUrls'] %>
            <div class="card-body">
              <div class="card-body-details-full">
                <ul>
                  <% org['Party']['RelatedUrls'][0]['URLs'].each do |url| %>
                    <li><i class="fa fa-external-link"></i> <a href="<%= url %>"><%= url %></a></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>
          <div class="card-navigation">
            <ul>
              <li class="card-navigation-control"><a href="" class="card-navigation-control-back"><i class="fa fa-chevron-left"></i></a></li>
              <li class="card-navigation-pagination">
                <i class="fa fa-circle"></i>
                <% if org['Party']['Addresses'] %>
                  <% (org['Party']['Addresses'].length - 1).times do %>
                    <i class="fa fa-circle-o"></i>
                  <% end %>
                <% end %>
                <% if org['Party']['ContactInstructions'] %>
                  <i class="fa fa-circle-o"></i>
                <% end %>
                <% if org['Party']['RelatedUrls'] %>
                  <i class="fa fa-circle-o"></i>
                <% end %>
              </li>
              <li class="card-navigation-control"><a href="" class="card-navigation-control-forward"><i class="fa fa-chevron-right"></i></a></li>
            </ul>
          </div>
        </li>
      <% end %>
      </ul>
    <% end %>
  </div>
</div>
