<main class="internal">
  <section class="content-header">
    <div class="content">
      <div class="breadcrumb">
        <ol>
          <li><%= link_to 'Dashboard', dashboard_path %></li>
          <li>Your Open Drafts</li>
        </ol>
      </div>
    </div>
  </section>
  <section>

    <table id="open_drafts">
      <thead>
        <tr>
          <th>Entry ID</th>
          <th>Entry Title</th>
          <th>Last Modified</th>
        </tr>
      </thead>
      <tbody>

      <% if @drafts.blank? %>
        <tr>
          <td colspan="4">
            No Open Drafts found
          </td>
        </tr>
      <% else %>

        <% @drafts.each do |draft| %>
          <tr class='<%= cycle("alt", "") %>'>
            <td>
              <%= link_to draft.display_entry_id, draft_path(draft) %>
            </td>
            <td>
              <%= draft.display_entry_title %>
            </td>
            <td>
              <%= draft.updated_at.strftime("%Y-%m-%d") %>
            </td>
          </tr>
        <% end %>

      <% end %>
      </tbody>
    </table>


  </section>
</main>
