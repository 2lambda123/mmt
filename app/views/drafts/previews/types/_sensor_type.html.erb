<ul class="<%= name_to_class('Sensors')%>-<%=index%>">
  <li>
    <strong>Sensor <%= index + 1 %></strong>

    <%= render :partial=>'drafts/previews/fields/display_field_line', :locals=>{:key_name=>'ShortName', :hash_for_key=>sensor} %>
    <%= render :partial=>'drafts/previews/fields/display_field_line', :locals=>{:key_name=>'LongName', :hash_for_key=>sensor} %>

    <!-- Characteristic -->
    <% if !sensor['Characteristics'].blank? %>
      <ul class="<%= name_to_class('Characteristics')%>">
        <li>
          <h4><%= 'Characteristics'.pluralize(sensor['Characteristics'].count)%></h4>
          <% sensor['Characteristics'].each_with_index do |characteristic, index| %>
            <%= render :partial=>'drafts/previews/types/characteristic_type', :locals=>{characteristic: characteristic, index: index} %>
          <% end %>
        </li>
      </ul>
    <% end %>

    <%= render :partial=>'drafts/previews/fields/display_field_line', :locals=>{:key_name=>'Technique', :hash_for_key=>sensor} %>

  </li>
</ul>
