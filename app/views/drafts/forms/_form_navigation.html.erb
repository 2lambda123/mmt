<div class="row metadata-cta nav-<%= location %>">
  <div class="col-2">
    <%= submit_tag "Save & Done", class: "btn btn-blue", :onclick => "return handleFormValidation(true, true);" %>
  </div>


  <div class="col-9 form-nav">
    <label for="next-section">Next: </label>

    <%= select_tag "next_section", options_for_select(draft_forms.map{|form| [form[:form_partial_name].titleize, form[:form_partial_name]]}, draft_form), class: 'next-section' %>

    <%= submit_tag "Save & Next", class: "btn btn-green", :onclick => "return handleFormValidation(true, true);" %>
  </div>

  <div class="col-1">
    <%= link_to 'Cancel', draft_path(draft), {:class=>"cancel", :id=>'discard_changes'} %>
  </div>

</div>
