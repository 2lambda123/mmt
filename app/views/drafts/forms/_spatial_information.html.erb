<!-- Spatial Keywords -->
<fieldset class="eui-accordion is-closed" id="spatial-keywords">
  <div class="eui-accordion__header">
    <h3 class="eui-accordion__title">Spatial Keywords</h3>
    <%= mmt_help_icon(
      title: 'Spatial Keywords',
      help: 'properties/SpatialKeywords'
    ) %>
    <div class="eui-accordion__icon" tabindex="0">
      <i class="eui-icon eui-fa-chevron-circle-down"></i>
      <span class="eui-sr-only">Toggle Spatial Keywords</span>
    </div>
  </div>
  <div class="eui-accordion__body">
    <div class="row">
      <div class="col-12">
        <div class="row sub-fields">
          <div class="selected-spatial-keywords spatial-keywords">
            <ul>
              <% spatial_keywords = draft.draft['SpatialKeywords'] || [] %>
              <% spatial_keywords.each do |spatial_keyword| %>
                <li>
                  <%= spatial_keyword %>
                  <a class="remove">
                    <i class="fa fa-times-circle"></i>
                    <span class="is-invisible">Remove <%= spatial_keyword %></span>
                  </a>
                  <%= hidden_field_tag("draft[spatial_keywords][]", spatial_keyword) %>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="eui-nested-item-picker">
            <ul class="eui-item-path">
              <li class="list-title"><a href="javascript:void(0);">Spatial Keyword</a></li>
            </ul>
            <div class="eui-item-list-pane">
              <ul>
              </ul>
            </div>
          </div>
          <div class="actions">
            <button type="button" class="eui-btn eui-btn--blue add-spatial-keyword"><i class="fa fa-plus-circle"></i> Add Keyword</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</fieldset>

<!-- Setup Spatial Keywords -->
<script type="text/javascript">
  setupScienceKeywords(<%= raw @spatial_keywords.to_json %>);
</script>
