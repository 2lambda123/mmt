<fieldset class="accordion is-closed" id="collection-information">
  <div class="accordion-header"><h3 class="icon-required">Collection Information</h3></div>
  <div class="accordion-body">
    <div class="row">
      <!-- Entry ID [r] -->
      <div class="col-6">
        <label for="draft_entry_id" class="main-field icon-required">Entry Id</label>
        <a href="#help-modal" class="display-modal" tabindex="-1">
          <i class="fa fa-info-circle" data-help-path="properties/EntryId"></i>
          <span class="hidden">Help modal for Entry Id</span>
        </a>
        <%= text_field_tag('draft[entry_id]', draft.draft['EntryId'], class: 'full-width validate') %>
      </div>
      <!-- Version -->
      <div class="col-6">
        <label for="draft_version" class="main-field">Version</label>
        <a href="#help-modal" class="display-modal" tabindex="-1">
          <i class="fa fa-info-circle" data-help-path="properties/Version"></i>
          <span class="hidden">Help modal for version</span>
        </a>
        <%= text_field_tag('draft[version]', draft.draft['Version'], class: 'full-width validate') %>
      </div>
    </div>


    <!-- Entry Title [r] -->
    <div class="row">
      <div class="col-12">
        <label for="draft_entry_title" class="main-field icon-required">Entry Title</label>
        <a href="#help-modal" class="display-modal" tabindex="-1">
          <i class="fa fa-info-circle" data-help-path="properties/EntryTitle"></i>
          <span class="hidden">Help modal for version</span>
        </a>
        <%= text_field_tag('draft[entry_title]', draft.draft['EntryTitle'], class: 'full-width validate') %>
      </div>
    </div>


    <!-- Abstract [r] -->
    <div class="row">
      <div class="col-12">
        <label for="draft_abstract" class="icon-required">Abstract</label>
        <a href="#help-modal" class="display-modal" tabindex="-1">
          <i class="fa fa-info-circle" data-help-path="properties/Abstract"></i>
          <span class="hidden">Help modal for abstract</span>
        </a>
        <%= text_area_tag('draft[abstract]', draft.draft['Abstract'], rows: 8, class: 'validate') %>
      </div>
    </div>


    <!-- Purpose -->
    <div class="row">
      <div class="col-12">
        <label for="draft_purpose">Purpose</label>
        <a href="#help-modal" class="display-modal" tabindex="-1">
          <i class="fa fa-info-circle" data-help-path="properties/Purpose"></i>
          <span class="hidden">Help modal for purpose</span>
        </a>
        <%= text_area_tag('draft[purpose]', draft.draft['Purpose'], rows: 8, class: 'validate') %>
      </div>
    </div>


    <!-- Data language -->
    <div class="row">
      <div class="col-12">
        <label for="draft_data_language">Data Language</label>
        <a href="#help-modal" class="display-modal" tabindex="-1">
          <i class="fa fa-info-circle" data-help-path="properties/DataLanguage"></i>
          <span class="hidden">Help modal for data language</span>
        </a>
        <%= text_field_tag('draft[data_language]', draft.draft['DataLanguage'], placeholder: 'English', class: 'half-width validate') %>
      </div>
    </div>
  </div>
</fieldset>

