<div class="row">
  <div class="col-12">
    <label class="main-field icon-required">Data Dates</label><i class="fa fa-info-circle"></i>
    <%= render partial: 'drafts/forms/type', locals: {
        type: 'date',
        values: draft.draft['DataDates'] || [{}],
        name_prefix: 'draft_|data_dates|_',
        multiple: true,
        options: {} } %>
  </div>
</div>

