<% urls.each_with_index do |url, index| %>
  <%= hidden_field_tag("draft[related_url][#{index}][url]", url['URL']) unless !url['URL'] || url['URL'].empty? %>
  <%= hidden_field_tag("draft[related_url][#{index}][description]", url['Description']) unless !url['Description'] || url['Description'].empty? %>
  <%= hidden_field_tag("draft[related_url][#{index}][protocol]", url['Protocol']) unless !url['Protocol'] || url['Protocol'].empty? %>
  <%= hidden_field_tag("draft[related_url][#{index}][mime_type]", url['MimeType']) unless !url['MimeType'] || url['MimeType'].empty? %>
  <%= hidden_field_tag("draft[related_url][#{index}][caption]", url['Caption']) unless !url['Caption'] || url['Caption'].empty? %>
  <%= hidden_field_tag("draft[related_url][#{index}][title]", url['Title']) unless !url['Title'] || url['Title'].empty? %>

  <% file_size = url['FileSize'] || {} %>
  <%= hidden_field_tag("draft[related_url][#{index}][file_size][size]", file_size['Size']) unless !file_size['Size'] || file_size['Size'].empty? %>
  <%= hidden_field_tag("draft[related_url][#{index}][file_size][unit]", file_size['Unit']) unless !file_size['Unit'] || file_size['Unit'].empty? %>

  <% content_type = url['ContentType'] || {} %>
  <%= hidden_field_tag("draft[related_url][#{index}][content_type][type]", content_type['Type']) unless !content_type['Type'] || content_type['Type'].empty? %>
  <%= hidden_field_tag("draft[related_url][#{index}][content_type][subtype]", content_type['Subtype']) unless !content_type['Subtype'] || content_type['Subtype'].empty? %>
<% end %>
