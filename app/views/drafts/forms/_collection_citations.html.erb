<fieldset class="eui-accordion" id="collection-citation">
  <div class="eui-accordion__header">
    <h3 class="eui-accordion__title">Collection Citations</h3>
    <%= mmt_help_icon(
      title: 'CollectionCitations',
      help: 'properties/CollectionCitations'
    ) %>
    <div class="eui-accordion__icon" tabindex="0">
      <i class="eui-icon eui-fa-chevron-circle-down"></i>
      <span class="eui-sr-only">Toggle Collection Citations</span>
    </div>
  </div>
  <div class="eui-accordion__body">
    <!-- Collection Citation -->
    <div class="row">
      <div class="col-12">
        <div class="row">
          <%= render partial: 'drafts/forms/type', locals: {
              type: 'collection_citation',
              values: draft.draft['CollectionCitations'] || [{}],
              name_prefix: "draft_|collection_citations|_",
              multiple: true,
              options: {} } %>
        </div>
      </div>
    </div>
  </div>
</fieldset>
