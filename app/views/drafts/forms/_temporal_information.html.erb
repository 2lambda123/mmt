<fieldset class="accordion is-closed" id="temporal-extents">
  <!-- Temporal Extent [r] -->
  <div class="accordion-header">
    <h3 class="icon-required">Temporal Extents</h3>
    <a href="#" class="fl-right">
      <i class="fa fa-angle-down toggle"></i>
      <span class="hidden">Toggle Temporal Extents</span>
    </a>
  </div>
  <div class="accordion-body">
    <div class="row">
      <div class="col-12">
        <div class="row sub-fields">
          <%= render partial: 'drafts/forms/type', locals: {
              type: 'temporal_extent',
              values: draft.draft['TemporalExtents'] || [{}],
              name_prefix: 'draft_|temporal_extents|_',
              multiple: true,
              options: {} } %>
        </div>
      </div>
    </div>
  </div>
</fieldset>

<fieldset class="accordion is-closed" id="temporal-keywords">
  <!-- Temporal Keywords -->
  <div class="accordion-header">
    <h3>Temporal Keywords</h3>
    <a href="#" class="fl-right">
      <i class="fa fa-angle-down toggle"></i>
      <span class="hidden">Toggle Temporal Keywords</span>
    </a>
  </div>
  <div class="accordion-body">
    <div class="row">
      <div class="col-12">
        <label for="draft_temporal_keywords_">Temporal Keywords</label>
        <a href="#help-modal" class="display-modal" tabindex="-1">
          <i class="fa fa-info-circle" data-help-path="properties/ISOTopicCategories"></i>
          <span class="hidden">Help modal for temporal keywords</span>
        </a>
        <%= select_tag "#{name_to_param('draft_|temporal_keywords|')}[]", options_for_select(@temporal_keywords, draft.draft['TemporalKeywords']), class: 'multi-select', size: 4, multiple: 'true' %>
      </div>
    </div>
  </div>
</fieldset>

<fieldset class="accordion is-closed" id="paleo-temporal-coverage">
  <div class="accordion-header">
    <h3>Paleo Temporal Coverage</h3>
    <a href="#" class="fl-right">
      <i class="fa fa-angle-down toggle"></i>
      <span class="hidden">Toggle Paleo Temporal Coverage</span>
    </a>
  </div>
  <div class="accordion-body">
    <!-- Paleo Temporal Coverage -->
    <!-- PaleoTemporalCoverageType -->
    <div class="row">
      <div class="col-12">
        <div class="row sub-fields">
          <%= render partial: 'drafts/forms/type', locals: {
              type: 'paleo_temporal_coverage',
              values: draft.draft['PaleoTemporalCoverage'] || {},
              name_prefix: 'draft_|paleo_temporal_coverage|_',
              multiple: false,
              options: {} } %>
        </div>
      </div>
    </div>
  </div>
</fieldset>
