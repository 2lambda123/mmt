<div class="multiple periodic-date-time">
  <% periodic_date_times.each_with_index do |periodic_date_time, index| %>
    <%= render partial: 'drafts/forms/fields/periodic_date_time_fields', locals: {
        periodic_date_time: periodic_date_time,
        name_prefix: "#{name_prefix}#{index}_",
        last_periodic_date_time: periodic_date_time == periodic_date_times.last,
        index: index } %>
  <% end %>
  <div class="actions">
    <button type="button" class="btn btn-green btn-sm btn-round add-new">Add another Periodic Date Time</button>
  </div>
</div>
