<!-- Platforms [r] -->
<fieldset class="accordion is-closed">
  <div class="accordion-header"><h3 class="icon-required">Platforms</h3></div>
  <div class="accordion-body">
    <div class="row taller">
      <div class="col-12">
        <%= render partial: 'drafts/forms/type', locals: {
            type: 'platform',
            values: draft.draft['Platforms'] || [{}],
            name_prefix: "draft_platforms_",
            multiple: true,
            options: {} } %>
      </div>
    </div>
  </div>
</fieldset>

