<div class="row sub-fields">
  <div class="col-6">
    <!-- Type - Select 'CREATE', 'UPDATE', 'DELETE', 'REVIEW'  -->
    <label for="<%= remove_pipes(name_prefix) %>type" class="icon-required">Type</label><i class="fa fa-info-circle"></i>
    <%= select_tag name_to_param("#{name_prefix}type"), options_for_select(DraftsHelper::DateTypeOptions, date['Type']), class: 'single-select' %>
  </div>
  <div class="col-6">
    <!-- Date -->
    <label for="<%= remove_pipes(name_prefix) %>date" class="icon-required">Date</label><i class="fa fa-info-circle"></i>
    <%= datetime_field_tag(name_to_param("#{name_prefix}date"), date['Date'], class: 'full-width') %>
  </div>
</div>
