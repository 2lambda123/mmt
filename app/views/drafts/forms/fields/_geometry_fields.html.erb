<div class="row sub-fields">
  <!-- Upload Shape file -->
  <div id="shape_file_upload" class="dropzone" >
    <h2>Create by Shape File</h2>
      <p>
        <a class="geojson-dropzone-link" href="#">Click here</a> to select a shape file.  You may also
        simply drag and drop shape files into this box at any time.
      </p>
      <p>
        Valid formats include:
      </p>
      <ul>
        <li>ESRI Shapefile (.zip including .shp, .dbf, and .shx file)</li>
        <li>Keyhole Markup Language (.kml or .kmz)</li>
        <li>GeoJSON (.json or .geojson)</li>
        <li>GeoRSS (.rss, .georss, or .xml)</li>
      </ul>
      <p>
        Polygons must contain less than 50 points.
      </p>
  </div>
  </br>


  <!-- CoordinateSystem -->
  <% coordinate_system = geometry['CoordinateSystem'] || "" %>
  <label>Coordinate System</label><i class="fa fa-info-circle"></i>
  <%= radio_button_tag(name_to_param("#{name_prefix}|coordinate_system|"), 'CARTESIAN', coordinate_system == 'CARTESIAN', class: 'coordinate-system-select') %><label for="<%= remove_pipes(name_prefix) %>coordinate_system_CARTESIAN">Cartesian</label>
  <%= radio_button_tag(name_to_param("#{name_prefix}|coordinate_system|"), 'GEODETIC', coordinate_system == 'GEODETIC', class: 'coordinate-system-select') %><label for="<%= remove_pipes(name_prefix) %>coordinate_system_GEODETIC">Geodetic</label>

  <!-- Bad </br>, take out design team! -->
  </br>

  <!-- Points -->
  <label>Points</label><i class="fa fa-info-circle"></i>
  <%= render partial: 'drafts/forms/type', locals: {
      type: 'point',
      values: geometry['Points'] || [{}],
      name_prefix: "#{name_prefix}points_",
      multiple: true,
      options: {show_preview: true} } %>


  <!-- BoundingRectangles -->
  <label>Bounding Rectangles</label><i class="fa fa-info-circle"></i>
  <%= render partial: 'drafts/forms/type', locals: {
      type: 'bounding_rectangle',
      values: geometry['BoundingRectangles'] || [{}],
      name_prefix: "#{name_prefix}|bounding_rectangles|_",
      multiple: true,
      options: {show_preview: true} } %>


  <!-- GPolygons -->
  <label>GPolygons</label><i class="fa fa-info-circle"></i>
  <%= render partial: 'drafts/forms/type', locals: {
      type: 'g_polygon',
      values: geometry['GPolygons'] || [{}],
      name_prefix: "#{name_prefix}|g_polygons|_",
      multiple: true,
      options: {show_preview: true} } %>


  <!-- Lines -->
  <label>Lines</label><i class="fa fa-info-circle"></i>
  <%= render partial: 'drafts/forms/type', locals: {
      type: 'line',
      values: geometry['Lines'] || [{}],
      name_prefix: "#{name_prefix}lines_",
      multiple: true,
      options: {} } %>

</div>
