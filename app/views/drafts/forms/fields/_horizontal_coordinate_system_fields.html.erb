<div class="row sub-fields">
  <!-- GeodeticModel -->
  <label>Geodetic Model</label><i class="fa fa-info-circle"></i>
  <%= render partial: 'drafts/forms/type', locals: {
      type: 'geodetic_model',
      values: horizontal_coordinate_system['GeodeticModel'] || {},
      name_prefix: "#{name_prefix}|geodetic_model|_",
      multiple: false,
      options: {} } %>

  <% geographic_checked = !horizontal_coordinate_system['GeographicCoordinateSystem'].nil? %>
  <% local_checked = !horizontal_coordinate_system['LocalCoordinateSystem'].nil? %>
  <div class="party-type" style="<%= 'display: none;' if options[:limit_type] %>">
    <input type="radio" id="<%= remove_pipes(name_prefix) %>geographic_coordinate_system" value="geographic" class="coordinate-system-picker geographic" <%= 'checked="checked"' if geographic_checked %>>
    <label for="<%= remove_pipes(name_prefix) %>geographic_coordinate_system">Geographic Coordinate System</label>
    <input type="radio" id="<%= remove_pipes(name_prefix) %>local_coordinate_system" value="local" class="coordinate-system-picker local" <%= 'checked="checked"' if local_checked %>>
    <label for="<%= remove_pipes(name_prefix) %>local_coordinate_system">Local Coordinate System</label>
  </div>

  <div class="geographic-coordinate-system-fields" style="<%= 'display: none;' if local_checked %>">
    <!-- GeographicCoordinateSystem -->
    <label>Geographic Coordinate System</label><i class="fa fa-info-circle"></i>
    <%= render partial: 'drafts/forms/type', locals: {
        type: 'geographic_coordinate_system',
        values: horizontal_coordinate_system['GeographicCoordinateSystem'] || {},
        name_prefix: "#{name_prefix}|geographic_coordinate_system|_",
        multiple: false,
        options: {} } %>
  </div>

  <div class="local-coordinate-system-fields" style="<%= 'display: none;' if geographic_checked %>">
  <!-- LocalCoordinateSystem -->
    <label>Local Coordinate System</label><i class="fa fa-info-circle"></i>
    <%= render partial: 'drafts/forms/type', locals: {
        type: 'local_coordinate_system',
        values: horizontal_coordinate_system['LocalCoordinateSystem'] || {},
        name_prefix: "#{name_prefix}|local_coordinate_system|_",
        multiple: false,
        options: {} } %>
  </div>
</div>
