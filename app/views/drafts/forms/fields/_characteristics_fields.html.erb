  <%= text_field_tag(name_to_param("#{name_prefix}unit"), characteristics['Unit'], class: 'half-width validate') %>


  <!-- Data Type [r] -->
  <label for="<%= remove_pipes(name_prefix) %>data_type" class="icon-required">Data Type</label><a href="#help-modal" class="display-help-modal" tabindex="-1"><i class="fa fa-info-circle" data-help-path="definitions/CharacteristicType/properties/DataType"></i></a>
  <%= text_field_tag(name_to_param("#{name_prefix}|data_type|"), characteristics['DataType'], class: 'half-width validate') %>
</div>
