<div class="row sub-fields">
  <!-- Name [r] -->
  <label for="<%= remove_pipes(name_prefix) %>name" class="icon-required">Name</label><a href="#help-modal" class="display-help-modal" tabindex="-1"><i class="fa fa-info-circle" data-help-path="definitions/CharacteristicType/properties/Name"></i></a>
