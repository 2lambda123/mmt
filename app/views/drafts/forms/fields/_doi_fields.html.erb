  <i class="fa fa-info-circle" data-help-path="definitions/DoiType/properties/DOI"></i>
  <span class="hidden">Help modal for DOI</span>
</a>
<%= text_area_tag name_to_param("#{name_prefix}doi"), doi['DOI'], rows: 8, class: 'validate' %>

