<% name_prefix += '|organization_name|_' %>
<div class="row">
  <div class="col-6">
    <!-- ShortName -->
    <%= mmt_text_field(
      name: 'short_name',
      title: 'Short Name',
      prefix: name_prefix,
      value: organization_name['ShortName'],
      help: 'definitions/OrganizationNameType/properties/ShortName',
      validate: true,
      always_required: true
     ) %>
  </div>
  <div class="col-6">
    <!-- LongName -->
    <%= mmt_text_field(
      name: 'long_name',
      title: 'Long Name',
      prefix: name_prefix,
      value: organization_name['LongName'],
      help: 'definitions/OrganizationNameType/properties/LongName',
      validate: true
     ) %>
  </div>
</div>
