<div class="row sub-fields">
  <!-- SpatialCoverageType -->
  <% spatial_coverage_type = spatial_information['SpatialCoverageType'] || '' %>
  <label class="icon-required">Spatial Coverage Type</label><a href="#help-modal" class="display-modal" tabindex="-1"><i class="fa fa-info-circle" data-help-path="definitions/SpatialInformationType/properties/SpatialCoverageType"></i></a>
  <p class="radio-group"><%= radio_button_tag(name_to_param("#{name_prefix}|spatial_coverage_type|"), 'HORIZONTAL', spatial_coverage_type == 'HORIZONTAL', class: 'spatial-coverage-type-select validate') %><label for="<%= remove_pipes(name_prefix) %>spatial_coverage_type_HORIZONTAL">Horizontal</label></p>
  <p class="radio-group"><%= radio_button_tag(name_to_param("#{name_prefix}|spatial_coverage_type|"), 'VERTICAL', spatial_coverage_type == 'VERTICAL', class: 'spatial-coverage-type-select validate') %><label for="<%= remove_pipes(name_prefix) %>spatial_coverage_type_VERTICAL">Vertical</label></p>
  <p class="radio-group"><%= radio_button_tag(name_to_param("#{name_prefix}|spatial_coverage_type|"), 'BOTH', spatial_coverage_type == 'BOTH', class: 'spatial-coverage-type-select validate') %><label for="<%= remove_pipes(name_prefix) %>spatial_coverage_type_BOTH">Both</label></p>
  </br>


  <!-- HorizontalCoordinateSystem -->
  <div class="spatial-coverage-type horizontal" style="<%= 'display: none;' unless spatial_coverage_type == 'HORIZONTAL' || spatial_coverage_type == 'BOTH' %>">
    <label>Horizontal Coordinate System</label>
    <%= render partial: 'drafts/forms/type', locals: {
        type: 'horizontal_coordinate_system',
        values: spatial_information['HorizontalCoordinateSystem'] || {},
        name_prefix: "#{name_prefix}|horizontal_coordinate_system|_",
        multiple: false,
        options: {} } %>
  </div>


  <!-- VerticalCoordinateSystem -->
  <div class="spatial-coverage-type vertical" style="<%= 'display: none;' unless spatial_coverage_type == 'VERTICAL' || spatial_coverage_type == 'BOTH' %>">
    <label>Vertical Coordinate System</label>
    <%= render partial: 'drafts/forms/type', locals: {
        type: 'vertical_coordinate_system',
        values: spatial_information['VerticalCoordinateSystem'] || {},
        name_prefix: "#{name_prefix}|vertical_coordinate_system|_",
        multiple: false,
        options: {} } %>
  </div>


</div>
