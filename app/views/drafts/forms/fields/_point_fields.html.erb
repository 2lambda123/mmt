<div class="row sub-fields">
  <!-- Longitude -->
  <label for="<%= remove_pipes(name_prefix) %>longitude" class="icon-required">Longitude</label><i class="fa fa-info-circle"></i>
  <%= text_field_tag(name_to_param("#{name_prefix}longitude"), point['Longitude'], class: 'half-width longitude validate mmt-number', step: 'any') %>


  <!-- Latitude -->
  <label for="<%= remove_pipes(name_prefix) %>latitude" class="icon-required">Latitude</label><i class="fa fa-info-circle"></i>
  <%= text_field_tag(name_to_param("#{name_prefix}latitude"), point['Latitude'], class: 'half-width latitude validate mmt-number', step: 'any') %>

</div>
