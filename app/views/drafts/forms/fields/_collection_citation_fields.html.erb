<div class="row sub-fields">
  <!-- Version -->
  <%= mmt_text_field(
    name: 'version',
    title: 'Version',
    prefix: name_prefix,
    value: collection_citation['Version'],
    help: 'definitions/ResourceCitationType/properties/Version',
    validate: true
   ) %>

  <!-- Title -->
  <%= mmt_text_area(
    name: 'title',
    title: 'Title',
    prefix: name_prefix,
    value: collection_citation['Title'],
    help: 'definitions/ResourceCitationType/properties/Title',
    validate: true
   ) %>


  <!-- Creator -->
  <%= mmt_text_area(
    name: 'creator',
    title: 'Creator',
    prefix: name_prefix,
    value: collection_citation['Creator'],
    help: 'definitions/ResourceCitationType/properties/Creator',
    validate: true
   ) %>


  <!-- Editor -->
  <%= mmt_text_area(
    name: 'editor',
    title: 'Editor',
    prefix: name_prefix,
    value: collection_citation['Editor'],
    help: 'definitions/ResourceCitationType/properties/Editor',
    validate: true
   ) %>


  <!-- SeriesName -->
  <%= mmt_text_area(
    name: 'series_name',
    title: 'Series Name',
    prefix: name_prefix,
    value: collection_citation['SeriesName'],
    help: 'definitions/ResourceCitationType/properties/SeriesName',
    validate: true
   ) %>


  <!-- ReleaseDate -->
  <%= mmt_datetime(
    name: 'release_date',
    title: 'Release Date',
    prefix: name_prefix,
    value: collection_citation['ReleaseDate'],
    help: 'definitions/ResourceCitationType/properties/ReleaseDate',
    validate: true
  ) %>


  <!-- ReleasePlace -->
  <%= mmt_text_area(
    name: 'release_place',
    title: 'Release Place',
    prefix: name_prefix,
    value: collection_citation['ReleasePlace'],
    help: 'definitions/ResourceCitationType/properties/ReleasePlace',
    validate: true
   ) %>


  <!-- Publisher -->
  <%= mmt_text_area(
    name: 'publisher',
    title: 'Publisher',
    prefix: name_prefix,
    value: collection_citation['Publisher'],
    help: 'definitions/ResourceCitationType/properties/Publisher',
    validate: true
   ) %>


  <div class="row">
    <div class="col-6">
      <!-- IssueIdentification -->
      <%= mmt_text_field(
        name: 'issue_identification',
        title: 'Issue Identification',
        prefix: name_prefix,
        value: collection_citation['IssueIdentification'],
        help: 'definitions/ResourceCitationType/properties/IssueIdentification',
        validate: true
       ) %>
    </div>
    <div class="col-6">
      <!-- DataPresentationForm -->
      <%= mmt_text_field(
        name: 'data_presentation_form',
        title: 'Data Presentation Form',
        prefix: name_prefix,
        value: collection_citation['DataPresentationForm'],
        help: 'definitions/ResourceCitationType/properties/DataPresentationForm',
        validate: true
       ) %>
    </div>
  </div>

  <!-- OtherCitationDetails -->
  <%= mmt_text_area(
    name: 'other_citation_details',
    title: 'Other Citation Details',
    prefix: name_prefix,
    value: collection_citation['OtherCitationDetails'],
    help: 'definitions/ResourceCitationType/properties/OtherCitationDetails',
    validate: true
   ) %>

  <!-- DOI -->
  <label>DOI</label>
  <a href="#help-modal" class="display-modal" tabindex="-1">
    <i class="ed-icon ed-fa-info-circle" data-help-path="definitions/ResourceCitationType/properties/DOI"></i>
    <span class="is-hidden">Help modal for DOI</span>
  </a>
  <div class="row sub-fields">
    <%= render partial: 'drafts/forms/type', locals: {
        type: 'doi',
        values: collection_citation['DOI'] || {},
        name_prefix: "#{name_prefix}doi_",
        multiple: false,
        options: {} } %>
  </div>


  <!-- RelatedUrl - only one -->
  <label>Related URL</label>
  <a href="#help-modal" class="display-modal" tabindex="-1">
    <i class="ed-icon ed-fa-info-circle" data-help-path="definitions/ResourceCitationType/properties/RelatedUrl"></i>
    <span class="is-hidden">Help modal for related URL</span>
  </a>
  <%= render partial: 'drafts/forms/type', locals: {
      type: 'related_url',
      values: collection_citation['RelatedUrl'] || {},
      name_prefix: "#{name_prefix}|related_url|_",
      multiple: false,
      options: {} } %>

</div>
