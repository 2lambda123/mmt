<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="eui-breadcrumbs">
        <ol class="eui-breadcrumbs__list">
          <li class="eui-breadcrumbs__item"><%= link_to 'Manage CMR', manage_cmr_path %></li>
          <li class="eui-breadcrumbs__item">Order Options</li>
        </ol>
      </div>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <div class="row row-content">
    <section>
      <h2>Order Options</h2>
      <%= link_to 'Create an Order Option', new_order_option_path, class: 'eui-btn--green' %>

      <p><%= page_entries_info @order_options, entry_name: 'order option' %></p>
      <table class="order-options-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Scope</th>
            <th>Deprecated?</th>
            <th>Last Update</th>
            <th colspan='3'>Action</th>
          </tr>
        </thead>
        <tbody>
        <% @order_options.each_with_index do |order_option, index| %>
          <tr>
            <td><%=order_option['Name']%></td>
            <td><%= order_option['Scope'] %></td>
            <td><%= order_option['Deprecated'] %></td>
            <td><%= echo_formatted_date(order_option['LastUpdate']) %></td>
            <td>
              <%= link_to 'View', order_option_path(order_option['Guid']) %>
            </td>
            <td>
              <%= link_to 'Edit', edit_order_option_path(order_option['Guid']) %>
            </td>
            <td>
              <%= link_to 'Delete', "#delete-option-modal-#{index}", class: 'display-modal' %>
              <div id="delete-option-modal-<%= index %>" class="eui-modal-content">
                <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-invisible">Close</span></a>
                <p>Are you sure you want to delete the order option named '<%=order_option['Name']%>'?</p>
                <p>
                  <a href="javascript:void(0)" class="eui-btn modal-close">No</a>
                  <%= link_to 'Yes', order_option_path(order_option['Guid']), method: :delete, class: 'eui-btn--blue spinner' %>
                </p>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @order_options %>

    </section>
  </div>
</main>
