<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="eui-breadcrumbs">
        <ol class="eui-breadcrumbs__list">
          <li class="eui-breadcrumbs__item"><%= link_to 'Manage CMR', manage_cmr_path %></li>
          <li class="eui-breadcrumbs__item"><%= link_to 'Order Options', order_options_path %></li>
          <li class="eui-breadcrumbs__item">New Order Option</li>
        </ol>
      </div>
      <h2>Edit Order Option</h2>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <div class="row row-content">
    <section>
      <%= form_tag(order_options_path(@order_option['id']), method: :post, id: 'order-option-definition-form', class: 'order-options') do %>
          <%= render partial: 'order_options_form', locals: { new_form: false } %>
        <div class="col-3">
          <%= submit_tag 'Update', class: 'eui-btn--blue' %>
          <%= link_to 'Cancel', order_options_path %>
        </div>
      <% end %>
    </section>
  </div>
</main>
