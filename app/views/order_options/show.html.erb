<div class="row row-content">
  <section>
    <h2><%= @order_option.fetch('name') %></h2>

    <p>
      <label>Last Update:</label> <%= @order_option.fetch('last_update') %> |
      <label>Scope:</label> <%= @order_option.fetch('scope') %> |
      <label>Deprecated:</label> <%= @order_option.fetch('deprecated') %> |
      <label>Sort Key:</label> <%= @order_option.fetch('sort_key') %>
    </p>

    <p>
      <label>Description:</label>
      <%= @order_option.fetch('description') %>
    </p>

    <div class="row">
      <label>Form XML:</label>

      <pre><%= @order_option.fetch('form') %></pre>
    </div>

    <%= link_to 'Edit', edit_order_option_path(@order_option.fetch('id')), class: 'eui-btn' %>

    <%= link_to 'Delete', "#delete-order-option-modal", class: 'display-modal eui-btn eui-btn--red' %>

    <%= link_to 'Deprecate', "#deprecate-order-option-modal", class: 'display-modal eui-btn eui-btn--red' %>

    <div id="delete-order-option-modal" class="eui-modal-content">
      <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-invisible">Close</span></a>
      <p>Are you sure you want to delete this order option?</p>
      <p>
        <a href="javascript:void(0)" class="eui-btn modal-close">No</a>
        <%= link_to 'Yes', order_option_path(@order_option.fetch('id')), method: :delete, class: 'eui-btn--blue spinner' %>
      </p>
    </div>

    <div id="deprecate-order-option-modal" class="eui-modal-content">
      <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-invisible">Close</span></a>
      <p>Are you sure you want to deprecate this order option?</p>
      <p>
        <a href="javascript:void(0)" class="eui-btn modal-close">No</a>
        <%= link_to 'Yes', order_option_deprecate_path(@order_option.fetch('id')), method: :post, class: 'eui-btn--blue spinner' %>
      </p>
    </div>

  </section>
</div>