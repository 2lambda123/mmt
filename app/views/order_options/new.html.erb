<div class="row row-content">
  <section>
    <h2>New <%= current_user.provider_id %> Order Option</h2>

    <%= form_tag(order_options_path, method: :post, id: 'order-option-definition-form', class: 'order-options') do %>
      <% if Rails.configuration.use_legacy_order_service %>
        <%= render partial: 'legacy_form', locals: { new_form: true } %>
      <% else %>
        <%= render partial: 'form', locals: { new_form: true } %>
      <% end %>
    <% end %>
  </section>
</div>
