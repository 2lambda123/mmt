<main class="internal record">
  <header>
    <div class="content">
      <div class="breadcrumb">
        <ol>
          <li><%= link_to 'Manage Metadata Dashboard', dashboard_path %></li>
          <li><%= link_to 'Search Results', '#', class: 'disabled' %></li>
          <li><%= @collection['EntryTitle'] %></li>
        </ol>
      </div>
      <h2><%= @collection['EntryTitle'] %></h2>
      <p class="subtitle">Published Record</p>
      <p class="subtitle"><a class="disabled" href="#" alt="Edit Record">Edit Record</a></p>
    </div>
  </header>
  <div class="row row-content">
    <section class="action">
      <div class="cta">
        <p>
          <%#= link_to 'Publish', collection_publish_path(@collection), method: :post, class: 'btn btn-blue', alt: 'Publish Draft' %>
          <a class="disabled" href="#" alt="Save as Template">Save as Template</a> |
          <a class="disabled" href="#" alt="Clone this Record">Clone this Record</a> |
          <a class="disabled" href="#" alt="Download XML">Download XML</a> |
          <a class="disabled" href="#" alt="Delete Record">Delete Record</a>
          <%#= link_to 'Delete Record', @collection, method: :delete, data: { confirm: 'Are you sure you want to delete this record?' } %>
        </p>
        <p>
          <a class="disabled" href="#" alt="Revisions">Revisions</a> |
          <a class="disabled" href="#" alt="Granules">Granules</a> |
        </p>
      </div>
      <div class="quality-score disabled">
        <div class="badges">
          <i class="fa fa-star fa-lg"></i>
          <i class="fa fa-star fa-lg"></i>
          <i class="fa fa-star fa-lg"></i>
          <i class="fa fa-star fa-lg"></i>
          <i class="fa fa-star-o fa-lg"></i>
        </div>
        <div class="score-info">
          <p>Quality Score: <strong>20</strong></p>
          <p>Required fields not complete</p>
        </div>
      </div>
    </section>

    <%= render partial: 'shared/preview/metadata_preview', locals: { metadata: @collection } %>

  </div>
</main>
