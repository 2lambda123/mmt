<main class="internal record" role="main">
  <header>
    <div class="content">
      <div class="breadcrumb">
        <ol>
          <li><%= link_to 'Dashboard', dashboard_path %></li>
          <li><%= @collection['EntryTitle'] || 'New Collection' %></li>
        </ol>
      </div>
      <h2><%= @collection['EntryTitle'] || 'New Collection' %></h2>
      <% unless @error %>
        <p class="subtitle">Published Record</p>
        <p class="subtitle">
          <%= link_to 'Edit Record', edit_collection_path(revision_id: @revision_id), alt: 'Edit Record' %>
        </p>
      <% end %>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <% if @old_revision %>
    <div class="banner banner-info">
      <%= link_to 'You are viewing an older revision of this collection. Click here to view the latest published version.', collection_path %>
    </div>
  <% end %>

  <div class="row row-content">
    <% if @error %>
      <div class="banner banner-info">
        <p>
          <%= @error %>
        </p>
      </div>
    <% else %>
      <section class="action">
        <div class="cta">
          <p>
            <a class="disabled" href="#" alt="Save as Template">Save as Template</a> |
            <%= link_to 'Clone this Record', clone_collection_path, alt: 'Clone this Record' %> |
            <a class="display-modal download-xml" href="#download-xml-modal" data-path="<%= @collection_link %>" alt="Download XML">Download XML</a> |
            <%= link_to 'Delete Record', "#delete-record-modal", class: 'display-modal delete-collection' %>
            <div id="delete-record-modal" class="modal-content">
              <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-hidden">Close</span></a>
              <p>Are you sure you want to delete this record?</p>
              <p>
                <a href="javascript:void(0)" class="btn btn-default modal-close">No</a>
                <%= link_to 'Yes', collection_path, method: :delete, class: 'btn btn-blue spinner' %>
              </p>
            </div>

            <!-- Hidden link to allow modal to be shown -->
            <a href="#granules-modal" id="display-granules-modal" class="display-modal" style="display: none;"></a>
            <div id="granules-modal" class="modal-content">
              <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-hidden">Close</span></a>
              <p>Collections with granules cannot be deleted</p>
              <p>
                <a href="javascript:void(0)" class="btn btn-default modal-close">Ok</a>
              </p>
            </div>

          </p>
          <p>
            <%= link_to "Revisions (#{@revisions.size})", collection_revisions_path, alt: 'Revisions' %> |
            <a class="collection-granule-count disabled" href="#" alt="Granules">Granules (<%= @num_granules %>)</a> |
          </p>
        </div>
        <div class="quality-score disabled">
          <div class="badges">
            <i class="fa fa-star fa-lg"></i>
            <i class="fa fa-star fa-lg"></i>
            <i class="fa fa-star fa-lg"></i>
            <i class="fa fa-star fa-lg"></i>
            <i class="fa fa-star-o fa-lg"></i>
          </div>
          <div class="score-info">
            <p>Quality Score: <strong>20</strong></p>
            <p>Required fields not complete</p>
          </div>
        </div>
        <%= render partial: 'shared/download_xml', locals: { collection: true } %>

      </section>

      <%= render partial: 'shared/preview/metadata_preview', locals: { metadata: @collection } %>
    <% end %>
  </div>
</main>
