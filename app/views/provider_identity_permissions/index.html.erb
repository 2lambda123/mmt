<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="eui-breadcrumbs">
        <ol class="eui-breadcrumbs__list">
          <li class="eui-breadcrumbs__item"><%= link_to 'Manage CMR', manage_cmr_path %></li>
          <li class="eui-breadcrumbs__item current">Provider Object Permissions</li>
        </ol>
      </div>
      <h2>Provider Object Permissions</h2>
      <p class="subnav current">
        <%= link_to 'Provider Object Permissions', provider_identity_permissions_path %>
      </p>
      <p class="subnav">
        <%= link_to 'Groups', groups_path %>
      </p>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <div class="row row-content">
    <section>
      <p>Click on a Provider Group to access provider object permissions for that group.</p>

      <%= page_entries_info @groups, entry_name: 'group' %>

      <table class="provider-group-table">
        <thead>
          <tr>
            <th>Provider Group Name</th><th>Description</th><th>Number of Members</th>
          </tr>
        </thead>

        <tbody>
          <% if @groups.blank? %>
            <tr>
              <td colspan="3">
                There are no Provider Groups available at this time or you do not have the right permissions.
              </td>
            </tr>
          <% else %>
            <% @groups.each do |group| %>
              <tr>
                <td>
                  <%= link_to "#{group['name']}", edit_provider_identity_permission_path(group['concept_id']) %>
                </td>
                <td><%= group['description'] %></td>
                <td><%= group['member_count'] %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <%= paginate @groups %>
    </section>
  </div>
</main>
