<% if @notifications.size > 1 %>
  <div class="eui-banner--warn eui-banner__dismiss">
    <p class="eui-banner__message">
      <a title="Display all calendar events" href="#" class="multiple-events">Multiple calendar events have been found. Click here to see all messages.</a>
    </p>
    <% @notifications.each do |notification| %>
      <p class="eui-banner__message is-hidden">
        <strong><%= notification['title'] %> <%= notification_time_span(notification) %></strong>
        <%= notification['message'] %>
        <%= link_to hide_notification_path(id: notification['id']), method: :post, remote: true, class: 'eui-banner__dismiss', title: 'Dismiss banner' do %>
          <i class="eui-icon eui-fa-times-circle"></i>
        <% end %>
      </p>
    <% end %>
  </div>
<% elsif @notifications.size == 1 %>
  <% notification = @notifications.first %>
<% end %>
