<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="eui-breadcrumbs">
        <ol class="eui-breadcrumbs__list">
          <li class="eui-breadcrumbs__item">
            <%= link_to 'Manage CMR', manage_cmr_path %>
          </li>
          <li class="eui-breadcrumbs__item">
            <%= link_to 'Data Quality Summaries', data_quality_summaries_path %>
          </li>
          <li class="eui-breadcrumbs__item">
            <%= link_to @summary.fetch('Name', ''), data_quality_summary_path(@summary.fetch('Guid')) %>
          </li>
          <li class="eui-breadcrumbs__item">Edit</li>
        </ol>
      </div>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <div class="row row-content">
    <section>
      <h2>Edit <%= current_user.provider_id %> Data Quality Summary</h2>

      <%= form_tag(data_quality_summary_path(@summary.fetch('Guid')), method: :put, class: "data-quality-summary-form", id: "data-quality-summary-form") do %>
        <%= render partial: "form" %>
      <% end %>
    </section>
  </div>
</main>
