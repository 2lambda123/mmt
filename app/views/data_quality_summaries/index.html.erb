<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="eui-breadcrumbs">
        <ol class="eui-breadcrumbs__list">
          <li class="eui-breadcrumbs__item">
            <%= link_to 'Manage CMR', manage_cmr_path %>
          </li>
          <li class="eui-breadcrumbs__item">Data Quality Summaries</li>
        </ol>
      </div>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <div class="row row-content">
    <section>
      <h2><%= @current_user.provider_id %> Data Quality Summaries</h2>

      <%= link_to 'Create a Data Quality Summary', new_data_quality_summary_path, class: 'eui-btn--green' %>

      <% if @summaries.empty? %>
        <p>No <%= @current_user.provider_id %> Data Quality Summaries found.</p>
      <% else %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Summary</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @summaries.each_with_index do |summary, index| %>
            <tr>
              <% if summary.error? %>
                <td colspan="3"><%= summary.parsed_error %></td>
              <% else %>
                <td><%= link_to summary.parsed_body.fetch('Name', ''), data_quality_summary_path(summary.parsed_body.fetch('Guid')) %></td>
                <td><%= strip_tags(summary.parsed_body.fetch('Summary', '')) %></td>
                <td>
                  <%= link_to 'Delete', "#delete-summary-modal-#{index}", class: 'display-modal' %>
                  <div id="delete-summary-modal-<%= index %>" class="eui-modal-content">
                    <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-invisible">Close</span></a>
                    <p>Are you sure you want to delete the data quality summary named '<%= summary.parsed_body.fetch('Name', '') %>'?</p>
                    <p>
                      <a href="javascript:void(0)" class="eui-btn modal-close">No</a>
                      <%= link_to 'Yes', data_quality_summary_path(summary.parsed_body.fetch('Guid')), method: :delete, class: 'eui-btn--blue spinner' %>
                    </p>
                  </div>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      <% end %>
    </section>
  </div>
</main>