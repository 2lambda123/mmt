<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="eui-breadcrumbs">
        <ol class="eui-breadcrumbs__list">
          <li class="eui-breadcrumbs__item"><%= link_to 'Manage CMR', manage_cmr_path %></li>
          <li class="eui-breadcrumbs__item"><%= link_to 'System Object Permissions', system_identity_permissions_path %></li>
          <li class="eui-breadcrumbs__item current"><%= @group.fetch('name', 'No Name') %></li>
        </ol>
      </div>
      <h2>System Object Permissions for <%= @group.fetch('name', 'No Name') %></h2>
      <p class="subnav current">
        <%= link_to 'System Object Permissions', system_identity_permissions_path %>
      </p>
      <p class="subnav">
        <%= link_to 'Groups', groups_path %>
      </p>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <div class="row row-content">
    <section>
      <%= form_tag(system_identity_permission_path(@group_id), method: :put, class: 'system-permissions-form') %>
        <p>
          Set permissions for the <%= @group.fetch('name', 'No Name') %> group by checking the appropriate boxes below and clicking 'Submit'.
        </p>
        <%= render partial: 'system_permissions_form' %>
    </section>
  </div>
</main>
