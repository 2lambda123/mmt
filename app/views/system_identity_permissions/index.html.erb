<main class="internal" role="main">
  <header>
    <div class="content">
      <div class="eui-breadcrumbs">
        <ol class="eui-breadcrumbs__list">
          <li class="eui-breadcrumbs__item"><%= link_to 'Manage CMR', manage_cmr_path %></li>
          <li class="eui-breadcrumbs__item current">System Object Permissions</li>
        </ol>
      </div>
    </div>
  </header>

  <%= render 'shared/flash_messages' %>

  <div class="row row-content">
    <section>
      <h2>System Object Permissions</h2>

      <p>Click on a System Group to access the system object permissions for that group.</p>

      <%= page_entries_info @groups, entry_name: 'group' %>

      <table class="system-group-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Number of Members</th>
          </tr>
        </thead>

        <tbody>
          <% if @groups.blank? %>
            <tr>
              <td colspan="3">
                There are no System Groups available at this time or you do not have permissions to see System Groups.
              </td>
            </tr>
          <% else %>
            <% @groups.each do |group| %>
              <tr>
                <td>
                  <%= link_to group['name'], edit_system_identity_permission_path(group['concept_id']) %>
                  <% if check_if_system_group?(group, group['concept_id']) %>
                    <span class="eui-badge--sm">SYS</span>
                  <% end %>
                </td>
                <td><%= group['description'] %></td>
                <td><%= group['member_count'] %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <%= paginate @groups %>
    </section>
  </div>
</main>
